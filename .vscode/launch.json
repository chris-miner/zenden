    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Bookings",
            "type": "node",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": [
                "bookings",
                "2022",
                "aug"
            ],
            "program": "${workspaceFolder}/src/zen.ts",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "preLaunchTask": "tsc: build - tsconfig.json",
            "envFile": "${workspaceFolder}/.env",
        },
        {
            "name": "Launch Customer",
            "type": "node",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/zen.ts",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "preLaunchTask": "tsc: build - tsconfig.json",
            "args": [
                "customer",
                "-d",
                "email@gmail.com"
            ],
            "envFile": "${workspaceFolder}/.env",
            "outputCapture": "std"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Staff",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/zen.ts",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "preLaunchTask": "tsc: build - tsconfig.json",
            "args": [
                "staff",
                "Chris",
                "Miner"
            ],
        }
    ]
}